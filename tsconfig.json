{
  "compilerOptions": {
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "module": "esnext",
    "importHelpers": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./dist"
  },
  "types": ["node"]
}
